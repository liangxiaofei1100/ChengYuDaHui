        <activity
            android:name="com.zhaoyan.juyou.game.chengyudahui.activity.ConnectFriendsActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.zhaoyan.juyou.game.chengyudahui.speakgame.SpeakGameActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.zhaoyan.juyou.game.chengyudahui.study.StudyActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
         <activity
            android:name="com.zhaoyan.juyou.game.chengyudahui.paint.PaintGameActivty"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />

        <provider
            android:name="com.zhaoyan.juyou.game.chengyudahui.db.ChengyuProvider"
            android:authorities="com.zhaoyan.juyou.game.chengyudahui.db.chengyuprovider"
            android:exported="false" >
        </provider>
    </application>

</manifest>