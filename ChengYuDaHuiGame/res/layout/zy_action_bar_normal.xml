<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android">

	<include
		android:id="@+id/zy_action_bar_home_item"
		layout="@layout/zy_action_bar_item_base" />

	<ImageView
		android:layout_width="?attr/zyActionBarDividerWidth"
		android:layout_height="fill_parent"
		android:background="?attr/zyActionBarDividerDrawable" 
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		/>

	<TextView
		style="?attr/zyActionBarTitleStyle"
		android:id="@+id/zy_action_bar_title"
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1.0"
		android:gravity="left|center_vertical"
		android:singleLine="true"
		android:textColor="?attr/zyActionBarTitleColor"
		android:textSize="16sp"
		android:textStyle="bold"
		android:paddingRight="8dp"
		android:paddingLeft="8dp" />

</merge>