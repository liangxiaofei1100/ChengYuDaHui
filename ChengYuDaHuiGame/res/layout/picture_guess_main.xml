<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhaoyan.juyou.game.chengyudahui.activity.MainMenuActivity" >

    <RelativeLayout
        android:id="@+id/title_top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_top_bg" >

        <TextView
            android:id="@+id/tv_jifen"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_jifen"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="0" />

        <TextView
            android:id="@+id/tv_gold"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tv_jifen"
            android:drawableLeft="@drawable/ic_gold"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_top"
        android:background="@drawable/title_chengyu_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="看图猜成语"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:padding="10dp"
            android:src="@drawable/ic_back_selector" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_marginBottom="10dp"
        android:background="@drawable/activity_middle"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >
        
        <LinearLayout
            android:id="@+id/ll_cy_icon"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_margin="16dp"
            android:background="@drawable/text_box_bg"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_cy_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/test" />
        </LinearLayout>
        
        <GridView
            android:id="@+id/gv_cy_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:verticalSpacing="1dp"
            android:horizontalSpacing="4dp"
            android:numColumns="8"
            android:layout_alignParentBottom="true"
            android:listSelector="@android:color/transparent"
            >
        </GridView>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gv_cy_word"
            android:layout_below="@+id/ll_cy_icon"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_answer_01"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cy_answer"
                android:padding="0dp"
                android:text="冰"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_answer_02"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cy_answer"
                android:padding="0dp"
                android:text="天"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_answer_03"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cy_answer"
                android:padding="0dp"
                android:text="雪"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_answer_04"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/cy_answer"
                android:padding="0dp"
                android:text="地"
                android:textColor="@android:color/white" />
        </LinearLayout>

</RelativeLayout>

</RelativeLayout>