<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#faf3f3"
    >
    
    <LinearLayout
        android:id="@+id/ll_cy_icon"
        android:layout_width="304dp"
        android:layout_height="174dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/yxbj"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_cy_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btxd" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button 
            android:id="@+id/btn_answer_01"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/cy_answer"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:text="冰"
            android:textColor="@android:color/white"
            />
        
        <Button 
            android:id="@+id/btn_answer_02"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/cy_answer"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:text="天"
            android:textColor="@android:color/white"
            />
        
        <Button 
            android:id="@+id/btn_answer_03"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/cy_answer"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:text="雪"
            android:textColor="@android:color/white"
            />
        
        <Button 
            android:id="@+id/btn_answer_04"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/cy_answer"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="0dp"
            android:text="地"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
    
    <GridView 
        android:id="@+id/gv_cy_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="8"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        >
    </GridView>

</LinearLayout>
